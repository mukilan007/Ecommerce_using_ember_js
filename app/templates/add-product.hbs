{{#each model as |post|}}
    {{vendortopnav-bar type1=post.type1 type2=post.type2 type3=post.type3 type4=post.type4 type5=post.type5}}
{{/each}}
<div>
    <form id="addform">
        <div class="vendorcontainer">
            <div id="vendor_inner_container1">
                <span id="error"></span>
                <label><b>Category Name</b></label><br>
                <input type="text" name="categoryname" id="categoryname" placeholder="Category" required><br>
                <label><b>Type</b></label><br>
                <input type="text" name="type" id="type" placeholder="Type of Category" required><br>
                <label><b>Brand Name</b></label><br>
                <input type="text" name="brandname" id="brandname" placeholder="Product Brand" required><br>
                <label><b>Product Name</b></label><br>
                <input type="text" name="productname" id="productname" placeholder="Product Name" required><br>
                <label><b>Detail</b></label><br>
                <textarea rows="4" cols="20" name="detail" id="detail" placeholder="About it" required></textarea><br>
                <label><b>Size</b></label><br>
                <input type="number" name="size" id="size" placeholder="Dimension" required><br>
                <label><b>Color</b></label><br>
                <input type="text" name="color" id="color" placeholder="Color" required><br>
                <label><b>Price</b></label><br>
                <input type="number" name="price" id="price" placeholder="Price" required><br>
                <label><b>Quantity</b></label><br>
                <input type="number" name="quantity" id="quantity" placeholder="Product Available" required><br>
            </div>
            <div id="vendor_inner_container2">
                <input {{action "vendorAdd"}} type="submit" id="submit" value="Add">
            </div>
        </div>
    </form>
</div>
